{
  "author": "Palisadoes Foundation",
  "type": "module",
  "bugs": {
    "url": "https://github.com/PalisadoesFoundation/talawa-plugin/issues"
  },
  "description": "Microkernel-based plugin system for extending Talawa with modular features across API, Admin, and Mobile.",
  "devDependencies": {
    "@clack/prompts": "^0.11.0",
    "@types/adm-zip": "^0.5.7",
    "@types/archiver": "^6.0.3",
    "@types/node": "^24.7.0",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.1",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "adm-zip": "^0.5.16",
    "chalk": "^5.6.2",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.10.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-tsdoc": "^0.5.0",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.1.7",
    "knip": "^5.67.0",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.1",
    "typedoc-plugin-markdown": "^4.5.0",
    "typescript": "^5.9.3",
    "vite": "^6.3.6",
    "vite-plugin-istanbul": "^7.1.0",
    "vite-plugin-svgr": "^4.3.0",
    "vitest": "^4.0.15"
  },
  "lint-staged": {
    "**/*.{ts, tsx, json, scss, css}": [
      "prettier --write"
    ],
    "**/*.{ts, tsx, json}": "eslint --fix"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "drizzle-orm": "^0.44.1",
    "prettier": "^3.6.2",
    "razorpay": "^2.9.6",
    "zod": "^4.1.13"
  },
  "homepage": "https://github.com/PalisadoesFoundation/talawa-plugin#readme",
  "license": "GNU General Public License v3.0",
  "name": "talawa-plugin",
  "packageManager": "pnpm@10.4.1",
  "version": "1.0.0",
  "scripts": {
    "init-plugin": "tsx ./scripts/init/index.ts",
    "zip-plugin": "tsx ./scripts/zip/index.ts",
    "lint:check": "eslint \"**/*.{ts,tsx}\" --max-warnings=0 && python .github/workflows/scripts/eslint_disable_check.py",
    "lint:fix": "eslint --fix \"**/*.{ts,tsx}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,json,json5,scss,css,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,json5,scss,css,yaml,yml}\"",
    "check-tsdoc": "node .github/workflows/scripts/check-tsdoc.js",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "postgenerate-docs": "find docs/docs/auto-docs -name 'README.md' -delete && node scripts/docs/fix-repo-url.js",
    "generate-docs": "typedoc && npm run postgenerate-docs && node scripts/docs/fix-readme-links.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "prepare": "husky"
  },
  "keywords": []
}
